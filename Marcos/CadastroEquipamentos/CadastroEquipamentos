import java.util.ArrayList;

// Classe que gerencia uma lista de equipamentos (simula o "cadastro")
public class CadastroEquipamentos {
    private ArrayList<Equipamento> lista; // lista para armazenar os equipamentos

    // Construtor: cria a lista vazia
    public CadastroEquipamentos() {
        lista = new ArrayList<Equipamento>();
    }

    // Método para adicionar um novo equipamento na lista
    public void adicionarEquipamento(Equipamento eq) {
        lista.add(eq);
    }

    // Método para listar todos os equipamentos cadastrados
    public void listarEquipamentos() {
        if (lista.isEmpty()) {
            System.out.println("Nenhum equipamento cadastrado.");
        } else {
            for (Equipamento eq : lista) {
                System.out.println(eq);  // chama o toString de cada equipamento
            }
        }
    }
}
